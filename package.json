{
  "name": "featurist-site",
  "private": true,
  "version": "2.0.0",
  "description": "Static Featurist Ltd site.",
  "scripts": {
    "postinstall": "yarn css && yarn js && yarn svg",
    "precommit": "lint-staged",
    "css": "postcss src/_css/styles.css -o src/styles.css",
    "css:watch": "yarn css -w",
    "css:compress": "postcss -m --use cssnano -r dist/styles.css",
    "svg": "svgstore -o src/images/_icon-sprite.svg -p 'i-' --inline src/images/_svg/*.svg",
    "build": "yarn svg && yarn js && harp compile src dist && yarn css:compress && yarn js:compress && yarn html && yarn images && yarn workbox",
    "js": "cat node_modules/headroom.js/dist/headroom.js node_modules/scrolltrigger-classes/ScrollTrigger.js node_modules/lozad/dist/lozad.js > src/js/plugins.js",
    "js:compress": "uglifyjs dist/js/main.js -o dist/js/main.js -cm && uglifyjs dist/js/plugins.js -o dist/js/plugins.js -cm",
    "html": "html-minifier --input-dir=dist --output-dir=dist -c html-minifier.json --file-ext=html",
    "images": "find dist -type d -exec imagemin {}/* --out-dir={} \\;",
    "workbox": "workbox generate:sw",
    "format": "prettier '**/*.{js,json,md}' --write; eslint '**/*.js' --fix; stylelint 'src/_css/**/*.css' --fix",
    "start": "harp server src --port ${PORT:-3000} & yarn css:watch",
    "deploy": "yarn build && gh-pages -d dist -b gh-pages"
  },
  "repository": "featurist:featurist-site",
  "dependencies": {
    "headroom.js": "^0.9.4",
    "lozad": "^1.3.0",
    "scrolltrigger-classes": "^0.3.6",
    "suitcss-base": "^4.0.0",
    "suitcss-components-button": "^6.0.2",
    "suitcss-utils-display": "^1.0.2",
    "suitcss-utils-layout": "^1.0.1",
    "suitcss-utils-text": "^1.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^8.1.0",
    "cssnano": "^3.10.0",
    "eslint": "^4.18.2",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-xo": "^0.20.1",
    "eslint-plugin-prettier": "^2.6.0",
    "gh-pages": "^1.1.0",
    "harp": "^0.25.0",
    "html-minifier": "^3.5.10",
    "husky": "^0.14.3",
    "imagemin-cli": "^3.0.0",
    "lint-staged": "^7.0.0",
    "postcss-cli": "^5.0.0",
    "postcss-color-function": "^4.0.1",
    "postcss-custom-media": "^6.0.0",
    "postcss-custom-properties": "^6.2.0",
    "postcss-import": "^11.1.0",
    "postcss-nested": "^3.0.0",
    "postcss-property-lookup": "^2.0.0",
    "postcss-size": "^2.0.0",
    "prettier": "^1.11.1",
    "stylelint": "^9.1.1",
    "stylelint-config-suitcss": "^14.0.0",
    "stylelint-selector-bem-pattern": "^2.0.0",
    "svgstore-cli": "^1.3.1",
    "uglify-js": "^3.3.13",
    "workbox-cli": "^2.1.3"
  },
  "browserslist": [
    "> 5%",
    "last 2 versions",
    "ie 11"
  ],
  "postcss": {
    "map": {
      "inline": false
    },
    "plugins": {
      "postcss-import": {},
      "postcss-nested": {},
      "postcss-custom-properties": {},
      "postcss-property-lookup": {},
      "postcss-color-function": {},
      "postcss-custom-media": {},
      "postcss-size": {},
      "autoprefixer": {}
    }
  },
  "postcssSortingConfig": {
    "properties-order": "alphabetical"
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ]
  }
}
